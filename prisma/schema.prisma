generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id              String @id @default(uuid())
  name            String
  species         String
  breed           String
  age             String
  sex             String
  characteristics Json
  description     String
  orgId           String
  organization    Org    @relation(fields: [orgId], references: [id])

  @@map("Pets")
}

model Org {
  id       String @id @default(uuid())
  name     String
  state    String
  city     String
  addres   String
  whatsapp String
  email    String @unique
  pets     Pet[]

  @@map("Orgs")
}
